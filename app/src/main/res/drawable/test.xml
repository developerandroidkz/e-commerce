<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="0dp" />
            <solid android:color="@color/blue" />
            <padding android:bottom="@dimen/button_padding" android:left="@dimen/radio_button_horizontal_padding" android:right="@dimen/radio_button_horizontal_padding" android:top="@dimen/button_padding" />
        </shape>
    </item>

    <item>
        <shape >
            <corners android:radius="0dp" />
            <stroke android:width="1dp" android:color="@color/blue" />
            <padding android:bottom="@dimen/button_padding" android:left="@dimen/button_padding" android:right="@dimen/button_padding" android:top="@dimen/button_padding" />
        </shape>
    </item>
</selector>