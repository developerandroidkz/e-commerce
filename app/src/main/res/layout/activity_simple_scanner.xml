<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"




    tools:context="kz.putandgo.kuanysh.menuexample.Scanner">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarss"
        android:layout_gravity="top"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
               android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/toolbarss"
        android:id="@+id/recyclerViewScan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        >
    </android.support.v7.widget.RecyclerView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/scansss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="end|bottom"
        android:layout_margin="50dp"
        app:backgroundTint="@color/blue"
        app:srcCompat="@drawable/barcode" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="50dp"

        app:backgroundTint="@color/blue"
        app:srcCompat="@drawable/oplata"

        android:layout_above="@+id/recyclerViewScan"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/summaScan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>